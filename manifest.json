{
  "name": "Kagi FastGPT To Markdown",
  "version": "2.0",
  "author": "Pedro Miranda",
  "description": "Export Kagi's FastGPT questions and answers to Markdown format with one click",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "96": "images/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://kagi.com/*"
      ],
      "js": [
        "libs/turndown.umd.js"
      ]
    }
  ],
  "action": {
    "default_title": "FastGPT To Markdown - Click to export",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "96": "images/icon-96.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Open FastGPT to Markdown popup"
    },
    "copy-to-markdown": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy FastGPT content to Markdown"
    }
  },
  "options_page": "options/options.html",
  "homepage_url": "https://github.com/Raudbjorn/fastgpt-to-md"
}
